# Deepgram API Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Language Configuration (Default: en)
# Supported languages: en, es, fr, de, it, pt, nl, hi, ja (Japanese), zh, ko, sv, and more
# Can be overridden per session by passing 'language' parameter
STT_LANGUAGE=en

# Sarvam AI Configuration
SARVAM_API_KEY=your_sarvam_api_key_here
SARVAM_API_URL=https://api.sarvam.ai/v1
SARVAM_WS_URL=wss://api.sarvam.ai/v1

# STT Provider Configuration
DEFAULT_STT_PROVIDER=deepgram
ENABLE_SARVAM_STT=true

# Server Configuration
PORT=8080
NODE_ENV=production

# Alternative Deepgram API key name (fallback)
DeepGram_API_Key=your_deepgram_api_key_here